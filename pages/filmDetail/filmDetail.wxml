
<view class="container">
    
    <block wx:if="{{showLoading}}">
        <view class="loading">玩命加载中…</view>
    </block>
    <block wx:elif="{{showContent}}">
    <!-- fd: film detail -->
        <view class="fd-hd">
            <view class="fd-hd-bg" style="background-image: url({{filmDetail.image}})"></view>
            <image src="{{filmDetail.image}}" class="fd-cover"></image>
            <view class="fd-intro">
                <view class="fd-title">{{filmDetail.title}}</view>
                <view class="fd-intro-txt">导演：{{daoyan}}</view>
                <view class="fd-intro-txt">豆瓣评分：
                    <block wx:if="{{filmDetail.score == 0}}">
                        暂无
                    </block>
                    <block wx:else>
                        {{filmDetail.score}}分
                    </block>
                </view>
                <view class="fd-intro-txt">上映年份：{{filmDetail.year}}年</view>
                
            </view>
            <view class="fd-favorite {{isFilmFavorite ? 'fd-favorite-active' : ''}}" bindtap="favoriteFilm" wx:if='{{1==0}}'>收藏</view> 
        </view>
        <view class="padding flex flex-direction">
              <button wx:if="{{showPlayVideo}}" catchtap="watchVideo"  class="cu-btn bg-red margin-tb-sm lg">观看电影</button>
        </view>
        <view class="fd-bd">
            <view wx:if="{{showUrls && showPlayVideo}}" class="play_tips">点击播放</view>
            <view class="fd-bd-tag" wx:if="{{showUrls && showPlayVideo}}">
                <block wx:for="{{videoUrls}}" wx:for-item="videoUrl" wx:key="videoUrl">
                    <view class="fd-bd-tag-item" data-tag="{{videoUrl}}" catchtap="viewVideoDetail">{{videoUrl.name}}(点击观看)</view>
                </block>
            </view>
            <view wx:if="{{showUrls  && showPlayVideo && 1==0}}" class="play_tips">站外播放(点击按钮复制链接去外部浏览器打开)</view>
            <view wx:if="{{showUrls  && showPlayVideo}}">注意：任何人不得用以从事非法盈利或其他违法活动，观看后请删除链接</view>
            <view class="fd-bd-tag" wx:if="{{showUrls && showPlayVideo && 1==0}}">
                <block wx:for="{{videoUrls  && showPlayVideo}}" wx:for-item="videoUrl" wx:key="videoUrl">
                    <view class="fd-bd-tag-item" data-tag="{{videoUrl}}" catchtap="copyPlayUrl">{{videoUrl.name}}(点击复制)</view>
                </block>
            </view>

            <ad unit-id="adunit-c1d46201dcf306e8"></ad>

            <view class="padding flex flex-direction">
              <button open-type="share" class="cu-btn bg-red margin-tb-sm lg">分享给朋友</button>
            </view>

            <view class="fd-bd-title">剧情简介</view>
            <view class="fd-bd-intro">{{filmDetail.profile}}</view>
            <ad unit-id="adunit-097da8a3e5c7d6f9" class='bottom_ad'></ad>
            <view class="fd-bd-title">演员</view>
            <view class="fd-bd-person">
                <view class="fd-bd-person-item" data-id="{{filmDetail.directors[0].id}}">
                    <view class="fd-bd-person-name">{{zhuyan}}</view> 
                </view>
            </view>
            
            <view class="fd-bd-title" wx:if="{{1==0}}">标签</view>
            <view class="fd-bd-tag" wx:if="{{1==0}}">
                <block wx:for="{{filmDetail.tag}}" wx:for-item="filmDetailTagItem" wx:key="filmDetailTagItem">
                    <view class="fd-bd-tag-item" data-tag="{{filmDetailTagItem}}" catchtap="viewFilmByTag">{{filmDetailTagItem}}</view>
                </block>
            </view>
        </view>
    </block> 
</view>
<import src="../../components/message/message.wxml"/>
<template is="message" data="{{message: message}}"/>